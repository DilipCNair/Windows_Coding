<Window x:Class="Design.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Design"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="900" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None">
    <Grid x:Name="Grid_MainGrid">
        <Rectangle x:Name="Background" HorizontalAlignment="Left" Height="500" VerticalAlignment="Top" Width="900" d:IsHidden="True">
            <Rectangle.Fill>
                <ImageBrush ImageSource="images/apple_mac_os_x_el_capitan-wide.jpg"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle x:Name="Blur_Background" HorizontalAlignment="Left" Height="500" VerticalAlignment="Top" Width="900">
            <Rectangle.Effect>
                <BlurEffect Radius="60" RenderingBias="Quality"/>
            </Rectangle.Effect>
            <Rectangle.Fill>
                <ImageBrush ImageSource="images/apple_mac_os_x_el_capitan-wide.jpg"/>
            </Rectangle.Fill>
            <!--<Rectangle.Clip>
                <RectangleGeometry x:Name="Clipping_Reactangle" RadiusX="100" RadiusY="100"/>
            </Rectangle.Clip>-->
        </Rectangle>

    </Grid>
</Window>
